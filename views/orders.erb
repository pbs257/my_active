
<div class="jumbotron">
  <h1>Orders</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <h3>Order ID</h3>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <h3>Product ID</h3>
    </div>
  </div>
  <% Order.all.each do |o| %>
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
          <table class="table table-bordered table-striped table-hover">
            <td class="text-center"><%=o.order_id%></td>
          </table>
          <table class="table table-bordered table-striped table-hover">
            <td class="text-center"><%=o.product_id%></td>
          </table>
        </div>
      </div>
  <%end%>


