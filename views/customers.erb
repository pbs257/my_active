<h1>Customers</h1>


<table>
  <tr>
    <td>
      <b>
        ID
      </b>
    </td>
    <td>
      <b>
        Name
      </b>
    </td>
    <td>
      <b>
        Order ID
      </b>
    </td>
  </tr>
  <% Customer.all.each do |c| %>
      <tr>
        <td>
          <%= c.id %>
        </td>
        <td>
          <%= c.name %>
        </td>
        <td>
          <%=c.orders.first.id%>
        </td>
      </tr>
  <% end %>
</table>